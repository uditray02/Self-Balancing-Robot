<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="mybot">

    <xacro:include filename="$(find mybot_description)/urdf/mybot_gazebo.xacro"/>
    <xacro:include filename="$(find mybot_description)/urdf/mybot_ros2_control.xacro"/>
    
    <!-- Define materials -->
    <material name="SkyBlue">
        <color rgba="0.53 0.81 0.92 1.0"/> <!-- Sky Blue -->
    </material>
  
    <material name="Coral">
        <color rgba="1.0 0.50 0.31 1.0"/> <!-- Coral -->
    </material>
  
    <material name="LimeGreen">
        <color rgba="0.0 1.0 0.0 1.0"/> <!-- Lime Green -->
    </material>
  
    <material name="Gold">
        <color rgba="1.0 0.84 0.0 1.0"/> <!-- Gold -->
    </material>
  
    <material name="Crimson">
        <color rgba="0.86 0.08 0.23 1.0"/> <!-- Crimson -->
    </material>
  

    <!-- Define a link with the name "base_footprint" -->
    <link name="base_footprint"/>

    <!-- Define the main body of the robot with the name "base_link" -->
    <link name="base_link">
        <inertial>
            <origin xyz="0 0 0.04" rpy="0 0.25 0.3"/>
            <mass value="8.2573504e-01"/>
            <inertia ixx="2.2124416e-02" ixy="-1.2294101e-04" ixz="3.4938785e-04" iyy="2.1193702e-02" iyz="-5.0120904e-05" izz="2.0064271e-02"/>
        </inertial>
        <!-- Visual properties of the link -->
        <visual>
            <!-- Position and orientation of the link -->
            <origin xyz="0 0 0" rpy="0 0 0"/> <!-- orientation and position with respect to the below mesh -->
            <!-- Geometry definition using a mesh file -->
            <geometry>
                <mesh filename="package://mybot_description/meshesmain/base_link.STL"/>
            </geometry>
            <material name="Coral"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/> <!-- orientation and position with respect to the below mesh -->
            <!-- Geometry definition using a mesh file -->
            <geometry>
                <mesh filename="package://mybot_description/meshesmain/base_link.STL"/>
            </geometry>
        </collision>
    </link>

    <!-- Define a fixed joint connecting "base_footprint" to "base_link" -->
    <joint name="base_joint" type="fixed">
        <!-- Parent and child links of the joint -->
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <!-- Position and orientation of the joint -->
        <origin rpy="0 0 0" xyz="0 0 0.033"/> <!-- orientation and position with respect to the two reference frames between the two links -->
    </joint>

    <!-- Define the right wheel of the robot with the name "wheel_right_link" -->
    <link name="wheel_right_link">
        <inertial>
            <origin xyz="0 -0.014 0" rpy="0 0 0" />
            <mass value="0.0530086090966721" />
            <inertia ixx="1.88176298336665E-05" ixy="-4.8444933029987E-10" ixz="1.88163708851143E-08"
                     iyy="3.11510738647764E-05" iyz="-6.93560663069607E-11"
                     izz="1.8801969558182E-05" />    
        </inertial>
        <!-- Visual properties of the link -->
        <visual>
            <!-- Position and orientation of the link -->
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <!-- Geometry definition using a mesh file -->
            <geometry>
                <mesh filename="package://mybot_description/meshesmain/wheel_right_link.STL"/>
            </geometry>
            <material name="Gold"/>
        </visual>
        <collision>
            <origin xyz="0.0 -0.015 0.0" rpy="1.57 0.0 0.0"/>
            <geometry>
                <sphere radius="0.033"/>   
            </geometry>
        </collision>
    </link>

    <!-- Define a continuous joint connecting "base_link" to "wheel_right_link" -->
    <joint name="wheel_right_joint" type="continuous">
        <!-- Parent and child links of the joint -->
        <parent link="base_link"/>
        <child link="wheel_right_link"/>
        <!-- Axis of rotation for the joint -->
        <axis xyz="0 1 0"/>
        <!-- Position and orientation of the joint -->
        <origin xyz="0 -0.07 0" rpy="0 0 0"/>
    </joint>

    <!-- Define the left wheel of the robot with the name "wheel_left_link" -->
    <link name="wheel_left_link">
        <inertial>
            <origin xyz="0 0.014 0" rpy="0 0 0" />
            <mass value="0.0530086043217644" />
            <inertia ixx="1.8792911368909E-05"  ixy="3.31256392204584E-10" ixz="-1.14082001662767E-08"
                     iyy="3.11510738759073E-05" iyz="-3.60499245082192E-10"
                     izz="1.88266886146847E-05" />      
        </inertial>
        <!-- Visual properties of the link -->
        <visual>
            <!-- Position and orientation of the link -->
            <origin xyz="0 0 0" rpy="-1.57 0 0"/>
            <!-- Geometry definition using a mesh file -->
            <geometry>
                <mesh filename="package://mybot_description/meshesmain/wheel_left_link.STL"/>
            </geometry>
            <material name="Gold"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.015 0.0" rpy="1.57 0.0 0.0"/>
            <geometry>
                <sphere radius="0.033"/>   
            </geometry>
        </collision>
    </link>

    <!-- Define a continuous joint connecting "base_link" to "wheel_left_link" -->
    <joint name="wheel_left_joint" type="continuous">
        <!-- Parent and child links of the joint -->
        <parent link="base_link"/>
        <child link="wheel_left_link"/>
        <!-- Axis of rotation for the joint -->
        <axis xyz="0 1 0"/>
        <!-- Position and orientation of the joint -->
        <origin xyz="0 0.07 0" rpy="0 0 0"/>
    </joint>

    <!-- Define the front caster wheel of the robot with the name "caster_front_link" -->
    <link name="caster_front_link">
        <inertial>
            <origin xyz="3.89968128948481E-07 2.40073004698083E-07 0.00219173397061506" rpy="0 0 0" />
            <mass value="1.44379265037903E-06" />
            <inertia ixx="7.23075276010246E-11" ixy="-6.10956883467859E-16" ixz="2.22849693525031E-15"
                     iyy="3.8713793085917E-11"  iyz="2.93909858781952E-15"
                     izz="1.00967486676306E-10" />    
        </inertial>
        <!-- Visual properties of the link -->
        <visual>
            <!-- Position and orientation of the link -->
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <!-- Geometry definition using a mesh file -->
            <geometry>
                <mesh filename="package://mybot_description/meshesmain/caster_front_link.STL"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.005"/>   
            </geometry>
        </collision>
    </link>

    <!-- Define a fixed joint connecting "base_link" to "caster_front_link" -->
    <joint name="caster_front_joint" type="fixed">
        <!-- Parent and child links of the joint -->
        <parent link="base_link"/>
        <child link="caster_front_link"/>
        <!-- Position and orientation of the joint -->
        <origin xyz="0.04755 0 -0.0275" rpy="0 0 0"/>
    </joint>

    <!-- Define the rear caster wheel of the robot with the name "caster_rear_link" -->
    <link name="caster_rear_link">
        <inertial>
            <origin xyz="3.8996812895542E-07 2.40073004698083E-07 0.00219173397061509" rpy="0 0 0" />
            <mass value="1.44379265037902E-06" />
            <inertia ixx="7.23075276010246E-11" ixy="-6.10956872363424E-16" ixz="2.22849693527207E-15"
                     iyy="3.87137930859167E-11" iyz="2.939098587861E-15"
                     izz="1.00967486676306E-10" />    
        </inertial>
        <!-- Visual properties of the link -->
        <visual>
            <!-- Position and orientation of the link -->
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <!-- Geometry definition using a mesh file -->
            <geometry>
                <mesh filename="package://mybot_description/meshesmain/caster_rear_link.STL"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.005"/>   
            </geometry>
        </collision>
    </link>

    <!-- Define a fixed joint connecting "base_link" to "caster_rear_link" -->
    <joint name="caster_rear_joint" type="fixed">
        <!-- Parent and child links of the joint -->
        <parent link="base_link"/>
        <child link="caster_rear_link"/>
        <!-- Position and orientation of the joint -->
        <origin xyz="-0.04755 0 -0.0275" rpy="0 0 0"/>
    </joint>

    <!--Adding a weight on top for the self balancing robot demo . Name - "can_link"-->
    <link name="can_link">
        <visual>
            <origin xyz="-0.03 0.03 0" rpy="1.57 0 0" />
            <geometry>
                <mesh filename="package://mybot_description/meshesmain/can.STL"/>
            </geometry>
            <material name="SkyBlue"/>
        </visual>
    </link>

    <!-- Define a fixed joint connecting "base_link" to "can_joint" -->
    <joint name="can_joint" type="fixed">
        <origin xyz="0 0 0.078" rpy="0 0 0" />
        <parent link="base_link" />
        <child link="can_link" />
    </joint>

</robot>
